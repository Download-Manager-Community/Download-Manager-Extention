{
  "name": "Download Manager",
  "version": "2.0.0.0",
  "manifest_version": 3,
  "description": "Download Manager browser extension to download files.",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions":[
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "<all_urls>",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "*://*.*.*/*.zip"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  }
}